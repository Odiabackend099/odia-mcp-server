{
  "version": 2,
  "builds": [
    {
      "src": "src/mcp-server.ts",
      "use": "@vercel/node@3.1.1",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/dist/mcp-server.js"
    },
    {
      "src": "/mcp",
      "dest": "/dist/mcp-server.js" 
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/mcp-server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "dist/mcp-server.js": {
      "maxDuration": 30
    }
  }
}
